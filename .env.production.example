# ==================== 데이터베이스 설정 ====================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-password-here
POSTGRES_DB=myappstore
POSTGRES_PORT=5432

# ==================== Redis 설정 ====================
REDIS_PASSWORD=your-redis-password-here
REDIS_PORT=6379

# ==================== 보안 설정 ====================
# 중요: 강력한 SECRET_KEY를 생성하세요
# 생성 방법: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== AI 설정 ====================
# OpenAI API 키 (선택사항)
OPENAI_API_KEY=

# ==================== CORS 설정 ====================
# 프로덕션: 실제 도메인으로 변경하세요
# 예: http://myapp.example.com:5900,https://myapp.example.com
# 개발: * (모든 origin 허용)
CORS_ORIGINS=http://localhost:5900,http://192.168.0.8:5900

# ==================== 서버 포트 ====================
BACKEND_PORT=8100
FRONTEND_PORT=5900

# ==================== 로깅 설정 ====================
LOG_LEVEL=INFO
ENVIRONMENT=production

# ==================== 프론트엔드 환경변수 ====================
# 브라우저에서 접근할 수 있는 실제 URL
VITE_API_BASE_URL=http://your-server-ip:8100/api
VITE_BACKEND_URL=http://your-server-ip:8100
VITE_APP_URL=http://your-server-ip:5900
